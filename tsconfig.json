{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": false,
    "esModuleInterop": true,
    "module": "ES2022",
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "newLine": "lf",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "strict": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}
