{
  "name": "eslint-plugin-editorconfig",
  "version": "5.0.0-beta1",
  "description": "An ESLint plugin to enforce EditorConfig rules",
  "type": "module",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/main.mjs",
        "types": "./dist/main.d.ts"
      }
    }
  },
  "scripts": {
    "build": "unbuild",
    "test": "./test-packages/test.sh && esno tests/*.test.ts",
    "lint": "tsc --noEmit && ESLINT_USE_FLAT_CONFIG=false eslint --ext='.js,.cjs,.mjs,.ts,.json' . && ESLINT_USE_FLAT_CONFIG=true eslint .",
    "release": "npm publish . --access public"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "editorconfig"
  ],
  "author": "Jumpei Ogawa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phanect/eslint-plugin-editorconfig.git"
  },
  "bugs": {
    "url": "https://github.com/phanect/eslint-plugin-editorconfig/issues"
  },
  "homepage": "https://github.com/phanect/eslint-plugin-editorconfig",
  "dependencies": {
    "@stylistic/eslint-plugin-js": "^1.5.3",
    "@stylistic/eslint-plugin-ts": "^1.5.3",
    "change-case": "^5.4.0",
    "deepmerge": "^4.3.1",
    "editorconfig": "^1.0.2",
    "eslint": "^8.40.0 || ^9.0.0",
    "klona": "^2.0.4"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint-config-phanective": "latest",
    "esno": "^4.0.0",
    "unbuild": "^2.0.0"
  },
  "engines": {
    "node": ">=18.x",
    "npm": ">=10.x"
  }
}
